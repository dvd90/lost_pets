
<h1><%= @pet.name %> - <%= @pet.species %></h1>

<ul>
  <li>Address: <%= @pet.address %></li>
  <li>Found on: <%= @pet.found_on %></li>
</ul>


<%= link_to "Edit #{@pet.name}", edit_pet_path(@pet), class:"btn btn-warning"%>
<br>
<%= link_to "Delete #{@pet.name}", pet_path(@pet), method: :delete, data: { confirm: 'Are you sure ?'}, class:"btn btn-danger" %>
