<%= simple_form_for(pet) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :species, collection: Pet::SPECIES  %>
  <%= f.input :found_on, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

